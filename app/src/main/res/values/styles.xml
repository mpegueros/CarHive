    <style name="button_style_dialog_small">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/inter_semibold</item>
    </style>

    <style name="circle_shape_ic">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:clipToOutline" tools:ignore="NewApi">true</item>
        <item name="android:background">@drawable/rounded_corner</item>
    </style>

    <style name="title_content_chat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ic_content_chat">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="content_notify">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="count_notify">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditTextChat">
        <item name="android:background">@drawable/rounded_edit_text_chat</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textColorHint">@color/gray_dirt</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:radius">20dp</item>
    </style>

    <style name="header_date">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">15dp</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">8dp</item>
    </style>

    <style name="message_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">260dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:padding">15dp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="message_file">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:maxWidth">260dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">15dp</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">20dp</item>
    </style>

    <style name="message_image">
        <item name="android:layout_width">260dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:clipToOutline" tools:ignore="NewApi">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="message_video">
        <item name="android:layout_width">260dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:clipToOutline" tools:ignore="NewApi">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="content_message_video_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bg_content_file_message_sent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="txt_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_disabled</item>
    </style>

    <style name="status_message">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">visible</item>
        <item name="android:src">@drawable/ic_negative_message</item>
    </style>

    <style name="structure_status">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_gravity">end</item>
