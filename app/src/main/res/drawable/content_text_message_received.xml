<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sombra (gradiente radial) -->
    <item>
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="30dp"
                android:topRightRadius="30dp"
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="30dp" />
            <gradient
                android:type="linear"
                android:gradientRadius="55dp"
                android:centerColor="#728BA2E9"
                android:endColor="#329FB7FF"
                android:startColor="#679FB7FF"
                android:centerX="0.5"
                android:centerY="0.5" />
        </shape>
    </item>
    <!-- Fondo principal -->
    <item android:top="4dp" android:left="4dp" android:right="3dp" > <!-- Ajuste para desplazar la sombra -->
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="30dp"
                android:topRightRadius="30dp"
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="30dp" />
            <solid android:color="@color/white" /> <!-- Fondo principal -->
        </shape>
    </item>

</layer-list>