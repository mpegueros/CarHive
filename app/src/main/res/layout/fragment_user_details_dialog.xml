<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Botón de cerrar -->
        <Button
            android:id="@+id/closeButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_exit"
            android:backgroundTint="@color/red"
            android:layout_gravity="end" />

        <!-- Imagen del usuario -->
        <ImageView
            android:id="@+id/userImageView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:contentDescription="User Image" />

        <!-- Contenedor de información -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/firstNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_name"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/lastNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_name"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/emailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email_address"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/phoneNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_number"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/voterIDText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/voter_id"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/curpText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/curp"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/verifiedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/verified"
                android:textSize="18sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Contenedor de botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:gravity="center">

            <Button
                android:id="@+id/Desactivate"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:text="@string/deny"
                android:background="@drawable/btn_gray" />

            <Button
                android:id="@+id/userverified"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:text="@string/verify_button"
                android:background="@drawable/rounder_baneos"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
